{
  "name": "enadstack/laravel-roles",
  "description": "Reusable Roles & Permissions (single or multi-tenant teams) on spatie/laravel-permission",
  "type": "library",
  "license": "MIT",
  "require": {
    "php": ">=8.2",
    "illuminate/support": "^12.0",
    "spatie/laravel-permission": "^6.0"
  },
  "suggest": {
    "stancl/tenancy": "Needed only when using multi-database tenancy mode"
  },
  "require-dev": {
    "orchestra/testbench": "^10.0"
  },
  "autoload": {
    "psr-4": { 
      "Enadstack\\LaravelRoles\\": "src/",
      "Enadstack\\LaravelRoles\\Database\\Seeders\\": "database/seeders/"
    },
    "classmap": ["database/seeders/"]
  },
  "extra": {
    "laravel": {
      "providers": [
        "Enadstack\\LaravelRoles\\Providers\\RolesServiceProvider"
      ]
    }
  },
  "minimum-stability": "stable",
  "prefer-stable": true,
  "authors": [{ "name": "Enad Abuzaid", "email": "enad.abuzaid15@gmail.com" }]
}
