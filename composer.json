{
  "name": "enadstack/laravel-roles",
  "version": "1.3.0",
  "description": "Reusable Roles & Permissions (single or multi-tenant teams) on spatie/laravel-permission",
  "type": "library",
  "license": "MIT",
  "require": {
    "php": ">=8.2",
    "illuminate/support": "^12.0",
    "spatie/laravel-permission": "^6.0"
  },
  "suggest": {
    "stancl/tenancy": "Needed only when using multi-database tenancy mode",
    "inertiajs/inertia-laravel": "Required for Vue UI integration"
  },
  "require-dev": {
    "orchestra/testbench": "^10.0",
    "phpunit/phpunit": "^11.5",
    "pestphp/pest": "^3.0",
    "pestphp/pest-plugin-laravel": "^3.0"
  },
  "autoload": {
    "psr-4": {
      "Enadstack\\LaravelRoles\\": "src/",
      "Enadstack\\LaravelRoles\\Database\\Seeders\\": "database/seeders/"
    },
    "classmap": [
      "database/seeders/"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/",
      "Tests\\Traits\\": "tests/Traits/"
    }
  },
  "extra": {
    "laravel": {
      "providers": [
        "Enadstack\\LaravelRoles\\Providers\\RolesServiceProvider"
      ]
    }
  },
  "minimum-stability": "stable",
  "prefer-stable": true,
  "authors": [
    {
      "name": "Enad Abuzaid",
      "email": "enad.abuzaid15@gmail.com"
    }
  ],
  "scripts": {
    "test": "./vendor/bin/phpunit",
    "test:unit": "./vendor/bin/phpunit --testsuite=Unit",
    "test:feature": "./vendor/bin/phpunit --testsuite=Feature",
    "test:coverage": "./vendor/bin/phpunit --coverage-html build/coverage",
    "pest": "./vendor/bin/pest"
  },
  "config": {
    "allow-plugins": {
      "pestphp/pest-plugin": true
    }
  }
}